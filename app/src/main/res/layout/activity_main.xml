<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/letters"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameName"
            android:text="Путешествие по\nМИЭМ"
            android:textSize="60dp"
            android:paddingTop="15dp"
            android:paddingLeft="30dp"
            android:textColor="#000000"
            android:lineSpacingMultiplier="1.25"
            android:fontFamily="@font/f17147"/>

        <Button
            android:id="@+id/button_start"
            android:text="Начать"
            android:background="@drawable/gradient"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="40sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/howtopaly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="Как играть?"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/gameName"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:text="Настройки"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@id/howtopaly_button"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</RelativeLayout>