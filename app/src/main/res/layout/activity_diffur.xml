<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/komp514"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99FFFFFF"
        android:layout_margin="30dp"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Найти локальный экстремум функции двух пременных:\nf(x,y) = x^2 - 2xy + 4y^3\n\nОтвет представить в виде: (X,Y), скобки обязательны, пробела нет. Числа оставить в форме неправильных дробей a/b."
            android:textColor="#000000"
            android:paddingTop="15dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#FFFFFF"
            android:id="@+id/otvet_text"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"/>

        <Button
            android:id="@+id/otvet_button"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:text="ок"
            android:background="@drawable/gradient"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/komp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:background="@drawable/gradient"
        android:textStyle="bold"
        android:textSize="25dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"/>

</FrameLayout>